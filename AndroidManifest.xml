            android:name="com.james.erebus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.james.erebus.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.james.erebus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.james.erebus.MainActivity" />
        </activity>
        <activity
            android:name="com.james.erebus.MatchActivity"
            android:label="@string/title_activity_match"
            android:parentActivityName="com.james.erebus.MainActivity" >
