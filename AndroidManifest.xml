        <activity
            android:name="com.james.erebus.TournamentActivity"
            android:label="@string/title_activity_tournament"
            android:parentActivityName="com.james.erebus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.james.erebus.MainActivity" />
        </activity>
        <activity
            android:name="com.james.erebus.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:parentActivityName="com.james.erebus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.james.erebus.MainActivity" />
        </activity>
        <activity
            android:name="com.james.erebus.DropDownListDemo"
            android:label="@string/title_activity_drop_down_list_demo"
            android:parentActivityName="com.james.erebus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.james.erebus.MainActivity" />
        </activity>
    </application>

</manifest>