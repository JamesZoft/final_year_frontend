<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentButtonActivity" >

    <GridLayout
        android:id="@+id/tournamentButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:columnCount="1" >

        <TextView
            android:id="@+id/tournamentButtonTitleBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center" />
        <TextView
            android:id="@+id/tournamentButtonStatusBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:editable="false"
            android:gravity="center" />
        <TextView
            android:id="@+id/tournamentButtonDateBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:editable="false"
            android:gravity="center" />
        <TextView
            android:id="@+id/tournamentButtonTimeBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:editable="false"
            android:gravity="center" />
        <TextView
            android:id="@+id/tournamentButtonLinksBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
         <TextView
            android:id="@+id/tournamentButtonLocationBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
          <TextView
            android:id="@+id/tournamentButtonFormatBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
         <TextView
            android:id="@+id/tournamentButtonSubbedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
          <TextView
            android:id="@+id/tournamentButtonPrizesBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
           <TextView
            android:id="@+id/tournamentButtonEntryReqsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
          <TextView
            android:id="@+id/tournamentButtonSponsorBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="10"
            android:editable="false"
            android:gravity="center"
            android:autoLink="web" />
          
           
        
       
    </GridLayout>
     
</RelativeLayout>